@model WebApplication1.Models.Serial
@{
    ViewBag.Title = "Удаление сериала";
}

<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Превью</dt>
        <dd>
            <img src="@Html.DisplayFor(model => model.Image)" width="400">
        </dd>

        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>Рейтинг</dt>
        <dd>
            @Html.DisplayFor(model => model.Rating)
        </dd>

        <dt>Жанр</dt>
        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="DeleteSerial" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
